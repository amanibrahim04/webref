      "id": "requirements_section",
      "level": "3",
      "title": "Requirements"
    },
    {
      "id": "req_latlong",
      "level": "4",
      "title": "The Geolocation API\n   must provide location data in terms of a pair of latitude and longitude\n   coordinates."
    },
    {
      "id": "req_accuracy",
      "level": "4",
      "title": "The Geolocation API\n   must provide information about the accuracy of the retrieved location\n   data."
    },
    {
      "id": "req_oneshot",
      "level": "4",
      "title": "The Geolocation API\n   must support \"one-shot\" position updates."
    },
    {
      "id": "req_updates",
      "level": "4",
      "title": "The Geolocation API\n   must allow an application to register to receive updates when the position\n   of the hosting device changes."
    },
    {
      "id": "req_last_known",
      "level": "4",
      "title": "The Geolocation API\n   must allow an application to request a cached position whose age is no\n   greater than a specified value."
    },
    {
      "id": "req_errors",
      "level": "4",
      "title": "The Geolocation API must\n   provide a way for the application to receive updates about errors that may\n   have occurred while obtaining a location fix."
    },
    {
      "id": "req_request_acuracy",
      "level": "4",
      "title": "The Geolocation\n   API must allow an application to specify a desired accuracy level of the\n   location information."
    },
    {
      "id": "req_source_agnostic",
      "level": "4",
      "title": "The Geolocation\n   API must be agnostic to the underlying sources of location information."
    },
