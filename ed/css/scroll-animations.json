{
  "spec": {
    "title": "Scroll-linked Animations",
    "url": "https://drafts.csswg.org/scroll-animations-1/"
  },
  "properties": {
    "animation-timeline": {
      "name": "animation-timeline",
      "value": "<single-animation-timeline>#",
      "initial": "auto",
      "appliesTo": "all elements, ::before and ::after pseudo-elements",
      "inherited": "none",
      "percentages": "N/A",
      "computedValue": "As specified",
      "canonicalOrder": "per grammar",
      "animatable": "no",
      "media": "interactive"
    }
  },
  "descriptors": {
    "source": {
      "name": "source",
      "for": "@scroll-timeline",
      "value": "selector(<id-selector>) | none",
      "initial": "none"
    },
    "orientation": {
      "name": "orientation",
      "for": "@scroll-timeline",
      "value": "auto | block | inline | horizontal | vertical",
      "initial": "auto"
    },
    "start": {
      "name": "start",
      "for": "@scroll-timeline",
      "value": "auto | <length> | <percentage>",
      "initial": "auto"
    },
    "end": {
      "name": "end",
      "for": "@scroll-timeline",
      "value": "auto | <length> | <percentage>",
      "initial": "auto"
    },
    "scroll-time-range": {
      "name": "scroll-time-range",
      "for": "@scroll-timeline",
      "value": "auto | <time>",
      "initial": "auto"
    }
  },
  "valuespaces": {
    "<single-animation-timeline>": {
      "value": "auto | none | <timeline-name>"
    },
    "<timeline-name>": {
      "value": "<custom-ident> | <string>"
    },
    "<single-animation>": {
      "value": "<time> || <easing-function> || <time> || <single-animation-iteration-count> || <single-animation-direction> || <single-animation-fill-mode> || <single-animation-play-state> || [ none | <keyframes-name> ] || [ none | <timeline-name> ]"
    }
  }
}
